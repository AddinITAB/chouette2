<%= title_tag t("stop_area_copies.new.title."+@stop_area_copy.hierarchy) %>

<%= semantic_form_for [@referential, @stop_area, @stop_area_copy] do |form| %>
  <br>
  <%= form.inputs do %> 
    <%= form.input :source_id, :as => :hidden %>
    <%= form.input :hierarchy, :as => :hidden %>
    <% area_type_collection = @stop_area_copy.hierarchy == 'child' ? @stop_area.area_type_children : @stop_area.area_type_parents %>
    <%= form.input :area_type, :as => :select, :collection => area_type_collection, :include_blank => false, :member_label => Proc.new { |stop_area_type| t("area_types.label.#{stop_area_type}") }  %>
  <% end %>
  <%= form.actions do %>
    <%= form.action :submit, :as => :button , :label => t( 'formtastic.duplicate' ) %> 
    <%= form.action :cancel, :as => :link %>
  <% end %>
<% end %>
